<p id="notice"><%= notice %></p>
<div class="row justify-content-center">
  <div class="col-md-20">
    <div class="card">
      <header class="card-header">
        <h3 class="card-title mt-2 text-center">Terapia</h3>
      </header>

		<%= simple_form_for(@therapy) do |f| %>
		  <%= f.error_notification %>
		  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

		  <div class="form-inputs">
		    <%= f.input :name, label: 'Nome', class: 'form-control' %>
		    <%= f.input :price, label: 'Valor', class: 'form-control' %>
		  </div>

		  <div class="form-actions" align="center">
		    <%= f.submit 'Confirmar', class: 'btn btn-success' %>
		    <%= link_to 'Sair', therapies_path, class: 'btn btn-warning' %>
		  </div><br>
		<% end %>


      </article> <!-- card-body end .// -->
    </div> <!-- card.// -->
  </div> <!-- col.//-->
</div> <!-- row.//-->