<div class="row justify-content-center">
  <div class="col-md-15">
    <div class="card">
      <header class="card-header">
        <h4 class="card-title mt-2 text-center">Funcion√°rio</h4>
      </header>
      <article class="card-body">
        <%= form_with(model: user, local: true) do |form| %>
          <% if user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

              <ul>
              <% client.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

            <div class="form-row">
              <div class="col form-group">
                <%= form.label "Nome" %>
                <%= form.text_field :name, class: 'form-control' %>
              </div>
              <div class="col form-group">
                <%= form.label "Email" %>
                <%= form.text_field :email, class: 'form-control' %>
              </div>
            </div>
            <div class="form-row">
              <div class="col form-group">
                <%= form.label "Tipo" %>
                <% if current_user.recepcionista? %>
                  <%= form.select :kinds, options_for_select(["terapeuta", "recepcionista"]), {}, class: 'form-control' %>
                <% end %>
                <% if current_user.gerente? %>
                  <%= form.select :kinds, options_for_select(["terapeuta", "gerente", "recepcionista", "financeiro"]), {}, class: 'form-control' %>
                <% end %>
                <% if current_user.tecnico? %>
                  <%= form.select :kinds, options_for_select(["terapeuta", "gerente", "recepcionista", "financeiro", "tecnico"]), {}, class: 'form-control' %>
                <% end %>
              </div>
            </div>
            <div class="form-row">
              <div class="col form-group">
                <%= form.label "Notas" %>
                <%= form.text_area :notes, class: 'form-control' %>
              </div>
            </div>
            <%= f.input :status %>
            <%= f.input :notes %>
            <%= f.input :color, as: :minicolors %>
            <%= f.input :password %>
            <%= f.input :password_confirmation %>

          <div class="form-actions">
            <%= f.button :submit %>
          </div>
      
        <% end %>
      </article> <!-- card-body end .// -->
    </div> <!-- card.// -->
  </div> <!-- col.//-->
</div> <!-- row.//-->