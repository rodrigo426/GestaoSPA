<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row justify-content-center">
  <div class="col-md-20">
    <div class="card">
      <header class="card-header">
        <h3 class="card-title mt-2 text-center">Comanda</h3>
      </header>
      <article class="card-body">

            <%= simple_fields_for :item do |item_form| %>
              <div class='col form-group'>Cliente: <%= item.client.name %></div>
              <div class='col form-group'>Terapeuta: <%= item.user.name %></div>
              <div class='col form-group'>Terapia: <%= item.therapy.name %></div>
              <div class='col form-group'>Descrição: <%= item_form.text_area :description, class: 'form-control' %></div>

              <div class="form-actions" align="center">
                <%= item_form.submit 'Confirmar', class: "btn btn-success"%>
                <%= link_to 'Sair', items_path, class: "btn btn-warning" %>
              </div>
            <% end %>

        </article> <!-- card-body end .// -->
    </div> <!-- card.// -->
  </div> <!-- col.//-->
</div> <!-- row.//-->

<% end %>