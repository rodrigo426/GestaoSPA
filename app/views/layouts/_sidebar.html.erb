<script>
function toogleUser() {
    var x = document.getElementById("divUser");
    if (x.style.display === "none") {
        x.style.display = "block";
    } else {
        x.style.display = "none";
    }
}
function toogleHome() {
    var x = document.getElementById("divHome");
    if (x.style.display === "none") {
