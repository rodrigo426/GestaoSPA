<table style="width:50%;" align="center">
  <tr><th>
<%= form_with(model: cashier, local: true) do |form| %>
  <% if cashier.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cashier.errors.count, "error") %> prohibited this cashier from being saved:</h2>

      <ul>
      <% cashier.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "Valor" %>
    <%= form.text_field :price, :disabled=>true, class: 'form-control' %>
  </div>

  <div class="form-row">
    <div class='col form-group'>
      <%= form.label "Valor pago" %>
      <%= form.text_field :paid_value, class: 'form-control' %>
    </div>
    <div class='col form-group'>
      <%= form.label "Valor de Repasse" %>
      <%= form.text_field :therapist_value, class: 'form-control' %>
    </div>
    <div class='col form-group'>
      <%= form.label "Desconto?" %>
      <%= form.select :discount, options_for_select(Cashier.discounts.map {|k,v| [k,v]}), {}, {required: 'true', class: 'form-control'} %>
    </div>
  </div>

  <div class="form-row">
    <div class='col form-group'>
      <%= form.label "Forma de pagamento" %>
      <%= form.select :paymment, options_for_select(Cashier.paymments.map {|k,v| [k,v]}), {}, {required: 'true', class: 'form-control'} %>
    </div>

    <div class='col form-group'>
      <%= form.label "Pago?" %>
      <%= form.select :paid, options_for_select(Cashier.paids.map {|k,v| [k,v]}), {}, {required: 'true', class: 'form-control'} %>
    </div>
  </div>

  <div class="actions">
    <%= form.button "Confirmar", class: "btn btn-primary" %>
    <%= link_to 'Voltar', cashiers_path, class: 'btn btn-warning' %>
  </div>
<% end %>
</th></tr>
</table>