<body onload="myFunction()">
<div class="row justify-content-center">
  <div class="col-md-15">
    <div class="card">
      <header class="card-header">
        <h4 class="card-title mt-2 text-center">Produto</h4>
      </header>
      <article class="card-body">


<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: 'Nome' %>
    <%= f.input :description, label: 'Descrição' %>
    <%= f.input :price, label: 'Valor de venda (para os clientes)' %>
    <%= f.input :buy_value, label: 'Valor de compra (do fornecedor)' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Confirmar', class: 'btn btn-success' %>
    <%= link_to 'Sair', products_path, class: 'btn btn-warning' %>
  </div>
<% end %>


      </article> <!-- card-body end .// -->
    </div> <!-- card.// -->
  </div> <!-- col.//-->
</div> <!-- row.//-->

</body>