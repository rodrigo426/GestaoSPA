<p id="notice"><%= notice %></p>
<div id="example1" align="center">
  <br>
<h1>Produtos</h1>
<% if current_user.gerente? || current_user.tecnico? || current_user.financeiro? %>
<%= link_to 'Cadastrar Produto', new_product_path, class: "btn btn-info" %>
<% end %>
<table id="products" class='table table-striped table-bordered' style="width:90%;" align="center">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Valor</th>
      <th>Quantidade</th>
      <% if current_user.gerente? || current_user.tecnico? || current_user.financeiro? %>
      <th></th>
      <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <% if current_user.gerente? || current_user.tecnico? || current_user.financeiro? %>
          <td><%= link_to 'Editar', edit_product_path(product), class: 'btn btn-info' %></td>
          <td><%= link_to 'Deletar', product, method: :delete, data: { confirm: 'CUIDADO! Ao deletar um produto, todas as vendas relacionadas ao produto também serão deletadas. Tem certeza?' }, class: 'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>