<br>
<div align="center">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="wrap">
        <p class="form-title" align="center">
            <img src="http://julyoganiko.hospedagemdesites.ws/wp-content/uploads/2018/03/logo-julio-ganiko-principal.png" alt="Julyo Ganiko" width="150" height="110"></p>
        <form class="login">
          <div style="width: 20%;">
          <%= f.input :email, placeholder:"Email",
                      required: false,
                      label: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password, placeholder:"Senha",
                      label: false,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          </div>
        </form>
    

      <div class="form-actions" align="center">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
</div>