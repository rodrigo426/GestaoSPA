<table style="width:50%;" align="center">
  <tr><th>
<%= form_with(model: client, local: true) do |form| %>
  <% if client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :birthdate %>
    <%= form.date_select :birthdate, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :occupation %>
    <%= form.text_field :occupation, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :indication %>
    <%= form.text_field :indication, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :credit %>
    <%= form.text_field :credit, class: 'form-control' %>
  </div><br/>

  <div class="actions">
    <%= form.button "Confirmar", class: "btn btn-primary" %>
    <%= link_to 'Voltar', clients_path, class: 'btn btn-warning' %>
  </div>
<% end %>
</th></tr>
</table>